# Server environment example
# Copy to .env and fill values. Never commit real secrets.

PORT=8500
NODE_ENV=development

# MongoDB (optional - use SKIP_DB=true for local dev without DB)
MONGODB_URI=mongodb+srv://user:password@cluster.example.com/dbname
SKIP_DB=true

# CORS - allowed origin for the frontend
CLIENT_ORIGIN=http://localhost:5173

# Email settings
EMAIL_FROM=habtamu@example.com
EMAIL_TO=owner@example.com

# SMTP fallback
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user
SMTP_PASS=smtp-pass

# Gmail OAuth2 (optional - preferred for Gmail)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=

# Rate limiter
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=6
